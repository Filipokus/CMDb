@{
    ViewData["Title"] = "Home Page";
}
@model Bjornroth.Models.ViewModels.StartViewModel



<div class="start-random-page">
    <h1 class="randomized-movie-header">RANDOMIZED MOVIES</h1>
    

    <div class="carousel-sizing">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="@Model.GeneratedMovies[0].Poster" alt="First slide">

                    <div class="carousel-caption d-none d-md-block carousel-background">
                        <h1>@Model.GeneratedMovies[0].Title</h1>
                        <p>@Model.GeneratedMovies[0].Runtime</p>
                        @Html.ActionLink("Read More", "Index", "MovieDetails", new { imdbId = @Model.GeneratedMovies[0].ImdbId }, new { @class = "read-more-link" })
                    </div>

                </div>

                <div class="carousel-item">
                    <img class="d-block w-100" src="@Model.GeneratedMovies[1].Poster" alt="Second slide">
                    <div class="carousel-caption d-none d-md-block carousel-background">
                        <h1>@Model.GeneratedMovies[1].Title</h1>
                        <p>@Model.GeneratedMovies[1].Runtime</p>
                        @Html.ActionLink("Read More", "Index", "MovieDetails", new { imdbId = @Model.GeneratedMovies[0].ImdbId }, new { @class = "read-more-link" })
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@Model.GeneratedMovies[2].Poster" alt="Third slide">


                    <div class="carousel-caption d-none d-md-block carousel-background">
                        <h1>@Model.GeneratedMovies[2].Title</h1>
                        <p>@Model.GeneratedMovies[2].Runtime</p>
                        @Html.ActionLink("Read More", "Index", "MovieDetails", new { imdbId = @Model.GeneratedMovies[0].ImdbId }, new { @class = "read-more-link" })

                    </div>

                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>


</div>

