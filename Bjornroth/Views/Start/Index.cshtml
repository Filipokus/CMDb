            <input type="text" id="newRating" name="newRating" value="dislike" placeholder="Search movie title...." />
            <input type="submit" value="Add dislike" />
        }*@
        <h2>@Html.ViewData.Model.GeneratedMovies[i].NumberOfDislikes</h2>
        <h2>Plot</h2>
        <p>@Html.ViewData.Model.GeneratedMovies[i].Plot</p>
        <h2>Imdb Rating:</h2>
        <p>@Html.ViewData.Model.GeneratedMovies[i].ImdbRating</p>
    </div>
    }

</div>

