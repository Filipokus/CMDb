@{
    ViewData["Title"] = "Home Page";
}
@model Bjornroth.Models.ViewModels.StartViewModel



<div class="start-search">

    @for (int i = 0; i < Model.GeneratedMovies.Count; i++)
    {
    <div class="search-result">
        <img src=@Html.ViewData.Model.GeneratedMovies[i].Poster />
        <h2>@Html.ViewData.Model.GeneratedMovies[i].Title</h2>
        <h2>@Html.DisplayNameFor(model => Model.GeneratedMovies[i].NumberOfLikes);</h2>
        @using (@Html.BeginForm("Index", "Start"))
        {
            <input type="text" id="imdbId" name="imdbId" value=@Html.ViewData.Model.GeneratedMovies[i].ImdbId placeholder="Search movie title...." />
            <input type="text" id="newRating" name="newRating" value="like" placeholder="Search movie title...." />
            <input type="submit" value="Add like" />
        }
        <h2>@Html.ViewData.Model.GeneratedMovies[i].NumberOfLikes</h2>
        <h2>@Html.DisplayNameFor(model => Model.GeneratedMovies[i].NumberOfDislikes);</h2>

        @*TODO: Make sure Erik updates his API so that the dislike functionality is available through a "GET" OR rethink this functionality so that it can use a "POST"*@

