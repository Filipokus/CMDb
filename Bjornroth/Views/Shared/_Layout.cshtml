<body onload="ActivateEventListeners()">
    <header>
        <div class="logo">
            <img src="~/images/logo.png">
        </div>
        <div class="search-field-and-btn">
            @using (@Html.BeginForm("Index", "SearchResults"))
            {
                <input type="text" id="searchInput" name="searchInput" placeholder="Search movie title...." />

                <input type="submit" value="Search" />
            }
        </div>


        <div class="links">
            <ul>
                <li>@Html.ActionLink("HOME", "Index", "Start")</li>
                <li>@Html.ActionLink("TOPLIST", "Index", "TopList")</li>
            </ul>
        </div>
    </header>
    <div class="container">
@RenderBody()
    </div>






    <footer>
    </footer>
    
   
    <script src="~/js/site.js"></script>
</body>
</html>