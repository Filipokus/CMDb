@{
    ViewData["Title"] = "Top List";
}
@model Bjornroth.Models.ViewModels.TopListViewModel

<p id="dropDownList">@Html.DropDownListFor(x => Model.SelectedList, new SelectList(Model.Toplists))</p>
<h1 class="randomized-movie-header">TOP 4 @Model.SelectedList</h1>
<div class="toggleTopList">
    <div class="single-movie-detail">
        <div class="movie-detail-head">
            <div class="single-movie-detail-img">
                <img src="@Model.TopList[0].Poster">
                <figure class="ranking0"><h2>1</h2></figure>
            </div>
            <div class="head-and-plot-block">
                <h1>@Model.TopList[0].Title, @Model.TopList[0].Released</h1>
                <h3>Plot</h3>
                <p>@Model.TopList[0].Plot</p>
                @using (Html.BeginForm("Index", "MovieDetails"))
                {
                    <input type="hidden" name="imdbId" value="@Model.TopList[0].ImdbId" />
                    <input type="submit" class="read-more" value="Read More" />
                }

                <ul hidden="hidden">
                    <li id="like-number0">@Model.TopList[0].NumberOfLikes</li>
                    <li id="dislike-number0">@Model.TopList[0].NumberOfDislikes</li>
                </ul>

                <div class="like-buttons-full-movie-detail">
                    @using (Html.BeginForm("Index", "MovieDetails"))
                    {
                        <input type="hidden" id="imdbId0" value="@Model.TopList[0].ImdbId" />
                        <input type="hidden" value="like" />
                        <button type="submit" id="like-btn0" class="submitBtn"><img src="~/images/like.png" /></button>
                    }
                    <h1 class="rating-percentage-label"></h1>
                    @using (Html.BeginForm("Index", "MovieDetails"))
                    {
                        <input type="hidden" id="imdbId0" value="@Model.TopList[0].ImdbId" />
                        <input type="hidden" value="dislike" />
                        <button type="submit" id="dislike-btn0" class="submitBtn"><img src="~/images/dislike.png" /></button>
                    }

                </div>
            </div>
        </div>

    </div>
    <br />
    <div class="top-list-index-1-3-container">
        <div class="top-list-row">
            @for (int i = 1; i < Model.TopList.Count / 2; i++)
            {
                <div class="top-list-column">
                    <figure class="ranking"><h2>@(i + 1)</h2></figure>
                    <img src=@Model.TopList[i].Poster />
                    <h2>@Model.TopList[i].Title</h2>
                </div>
            }
        </div>

        <div class="top-list-row">
            @for (int i = 1; i < Model.TopList.Count / 2; i++)
            {
                <div class="top-list-column">
                    <ul hidden="hidden">
                        <li id="like-number@(i)">@Model.TopList[i].NumberOfLikes</li>
                        <li id="dislike-number@(i)">@Model.TopList[i].NumberOfDislikes</li>
                    </ul>
                    <div class="like-buttons-top-list-1-3">
                        @using (Html.BeginForm("Index", "MovieDetails"))
                        {
                            <input type="hidden" id="imdbId@(i)" value="@Model.TopList[i].ImdbId" />
                            <input type="hidden" value="like" />
                            <button type="submit" id="like-btn@(i)" class="submitBtn"><img src="~/images/like.png" /></button>
                        }
                        <h1 class="rating-percentage-label">17%</h1>
                        @using (Html.BeginForm("Index", "MovieDetails"))
                        {
                            <input type="hidden" id="imdbId@(i)" value="@Model.TopList[i].ImdbId" />
                            <input type="hidden" value="dislike" />
                            <button type="submit" id="dislike-btn@(i)" class="submitBtn"><img src="~/images/dislike.png" /></button>
                        }
                    </div>
                    <br />
                    @using (Html.BeginForm("Index", "MovieDetails"))
                    {
                        <input type="hidden" name="imdbId" value="@Model.TopList[i].ImdbId" />
                        <input type="submit" class="read-more" value="Read More" />
                    }
                </div>
            }
        </div>
    </div>
    <br />
</div>
<div class="toggleTopList" hidden="hidden">
    <div class="single-movie-detail">
        <div class="movie-detail-head">
