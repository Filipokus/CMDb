@{
    ViewData["Title"] = "Top List";
}
@model Bjornroth.Models.ViewModels.TopListViewModel

<h1>TOP 3 MOST INTERACTED WITH</h1>
<div class="top-list-index0-container">
    <img src="@Model.TopList[0].Poster" alt="Top Rated Movie">
    <div class="top-list-index0">
    <h1>@Model.TopList[0].Title (@Model.TopList[0].Released)</h1>
    <p>@Model.TopList[0].Plot</p>
    <div class="toplist-index0-info">
        <ul class="top-list-index0-container">
            <h2>MOVIE FACTS:</h2>
            <li>IMDB: @Model.TopList[0].imdbRating</li>
            <li>@Model.TopList[0].Director</li>
            <li>Number of Likes:</li>
            <li id="like-number0">@Model.TopList[0].NumberOfLikes</li>
            <li>Number of Dislikes:</li>
            <li id="dislike-number0">@Model.TopList[0].NumberOfDislikes</li>
        </ul>
        <figure class="percentageBubble"><h2>Percentage</h2></figure>
        </div>
        <p>
            @using (Html.BeginForm("Index", "MovieDetails"))
            {
                <input type="hidden" name="imdbId" value="@Model.TopList[0].ImdbId" />
                <input type="submit" class="read-more" value="Read More" />
            }
            @using (Html.BeginForm("Index", "TopList"))
            {
                <input type="hidden" id="imdbId0" name="imdbId" value="@Model.TopList[0].ImdbId" />
                <input type="hidden" name="newRating" value="like" />
                <input type="submit" value="Add like" id="like-btn0" class="submitBtn" />
            }
            @using (Html.BeginForm("Index", "TopList"))
            {
                <input type="hidden" id="imdbId0" name="imdbId" value="@Model.TopList[0].ImdbId" />
                <input type="hidden" name="newRating" value="dislike" />
                <input type="submit" value="Add dislike" id="dislike-btn0" class="submitBtn" />
            }
        </p>
        </div>

</div>
<div class="top-list-index-1-3-container">
    @for (var i = 1; i < Model.TopList.Count; i++)
    {
    <div class="top-list-index-1-3">
        <figure class="percentageBubble"><h2>Percentage</h2></figure>
        <br />
        <img src=@Model.TopList[i].Poster />
        <div class="top-list-index-1-3-info">
            <h2>@Model.TopList[i].Title</h2>
            <ul class="top-list-index-1-3">
                <li>@Model.TopList[i].Released</li>
                <li>@Model.TopList[i].Director</li>
                <li>1h27m</li>
                <li>Number of Likes:</li>
                <li id="like-number@(i)">@Model.TopList[i].NumberOfLikes</li>
                <li>Number of Dislikes:</li>
                <li id="dislike-number@(i)">@Model.TopList[i].NumberOfDislikes</li>
            </ul>
        </div>
        @using (Html.BeginForm("Index", "MovieDetails"))
        {
            <input type="hidden" name="imdbId" value="@Model.TopList[i].ImdbId" />
            <input type="submit" class="read-more" value="Read More" />
        }
        @using (Html.BeginForm("Index", "TopList"))
        {
            <input type="hidden" id="imdbId@(i)" name="imdbId" value="@Model.TopList[i].ImdbId" />
            <input type="hidden" name="newRating" value="like" />
            <input type="submit" value="Add like" id="like-btn@(i)" class="submitBtn" />
        }
        @using (Html.BeginForm("Index", "TopList"))
        {
            <input type="hidden" id="imdbId@(i)" name="imdbId" value="@Model.TopList[i].ImdbId" />
            <input type="hidden" name="newRating" value="dislike" />
            <input type="submit" value="Add dislike" id="dislike-btn@(i)" class="submitBtn" />
        }
    </div>
    }

</div>
<script src="~/js/topList.js" type="module"></script>