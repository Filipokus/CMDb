            <img src=@Model.Movies[1].Poster />
            <div class="seach-result-index-1-3-info">
                <h2>@Model.Movies[1].Title</h2>
                <ul class="seach-result-index-1-3">
                    <li>@Model.Movies[1].Released</li>
                    <li>@Model.Movies[1].Director</li>
                    <li>1h27m</li>
                </ul>
            </div>
        </div>
        <div class="search-result-index-2">
            <img src=@Model.Movies[2].Poster />
